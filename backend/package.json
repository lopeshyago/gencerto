{
  "name": "genesix_backend",
  "version": "1.0.0",
  "description": "Backend da plataforma GenesiX - Sistema de criação de produtos com IA",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:create": "createdb genesix_db",
    "db:drop": "dropdb genesix_db",
    "db:reset": "npm run db:drop && npm run db:create",
    "db:sync": "node -e \"require('./src/models').syncDatabase()\"",
    "db:sync:force": "node -e \"require('./src/models').syncDatabase(true)\"",
    "seed": "node src/seeders/index.js",
    "lint": "echo 'Linting not configured yet'",
    "format": "echo 'Formatting not configured yet'"
  },
  "keywords": [
    "nodejs",
    "express",
    "postgresql",
    "jwt",
    "oauth",
    "api",
    "backend",
    "genesix"
  ],
  "author": "GenesiX Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "sequelize-cli": "^6.6.3"
  }
}
